{
  "name": "hematopedia-api",
  "version": "1.0.0",
  "description": "Esse projeto é uma API para o hematopedia, um projeto de código aberto para ajudar a comunidade médica a ter acesso a informações sobre hematologia e hemoterapia.",
  "license": "ISC",
  "author": "Matthieu Christian <matthieuceo@gmail.com>",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup src --out-dir build",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint src --ext .ts",
    "start": "node build",
    "start:dev": "tsx watch src",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@fastify/cors": "11.0.1",
    "@fastify/jwt": "9.1.0",
    "@prisma/client": "6.8.2",
    "bcrypt": "6.0.0",
    "cloudinary": "2.6.1",
    "dotenv": "16.5.0",
    "fastify": "5.3.3",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "4.2.0",
    "@types/bcrypt": "5.0.2",
    "@types/node": "22.15.18",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "eslint": "9.27.0",
    "eslint-config-love": "120.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "17.18.0",
    "eslint-plugin-promise": "7.2.1",
    "prettier": "3.5.3",
    "prisma": "6.8.2",
    "tsup": "8.5.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.3"
  }
}
